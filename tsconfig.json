{
	"compilerOptions": {
		"target": "esnext",
		"useDefineForClassFields": true,
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"lib": [
			"esnext",
			"dom"
		],
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"src/*"
			],
			"@/assets/*": [
				"src/assets/*"
			],
			"@/utils/*": [
				"src/utils/*"
			],
			"@/router/*": [
				"src/router/*"
			],
			"@/views/*": [
				"src/config/*"
			],
			"@/components/*": [
				"src/components/*"
			],
			"@/api/*": [
				"src/api/*"
			]
		},
		"suppressImplicitAnyIndexErrors": true,
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue"
	]
}